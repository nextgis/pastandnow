{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "paths": {
      "@nextgis/*": ["@nextgis/packages/*/src/", "@nextgis_vue/packages/*/src/"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.json",
    "@nextgis_vue/packages/**/*.ts",
    "@nextgis/packages/maplibre-gl-map-adapter/src/maplibregl.d.ts",
    "@nextgis/packages/global.d.ts",
    "src/config.ts",
    "nextgisweb.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
